<%-include('../partials/header')%>
	<link rel="stylesheet" type="text/css" href="/css/form.css">
	<%-include('../partials/nav')%>
	<main>
<h1>Product Name: <%=show.title%></h1>
	<h2>Fill Up the Form</h2>
	<form action="<%=show._id%>/order" method="post">
		<div>
			<label>Name:</label>
			<input type="text" name="order[customer]">
		</div>
		<div>
			<label>Address:</label>
			<input type="text" name="order[address]">
		</div>
		<div>
			<label>Quantity:</label>
			<input type="number" name="order[quantity]">
		</div>
		<div>
			<p>Payment :</p>
			  <input type="radio" name="order[payment]" value="bkash">
  <label for="male">Bkash</label><br>
  <input type="radio"  name="order[payment]" value="cash-on-delivery">
  <label for="female">Cash On Delivery</label><br>
		</div>
		<button>Submit Order</button>
	</form>
		</main>
	<%-include('../partials/footer')%>